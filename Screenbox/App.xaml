<Application
    x:Class="Screenbox.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Screenbox.Converters"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <muxc:XamlControlsResources>
            <muxc:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary>
                    <converters:CommonVisibilityConverter x:Key="CommonVisibilityConverter" />
                    <converters:CommonVisibilityConverter x:Key="InvertCommonVisibilityConverter" Invert="True" />
                    <converters:HumanizedDurationConverter x:Key="HumanizedDurationConverter" />
                    <converters:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter" />
                    <converters:MediaTypeGlyphConverter x:Key="MediaTypeGlyphConverter" />

                    <Style TargetType="FontIcon">
                        <Setter Property="FontFamily" Value="{ThemeResource SymbolThemeFontFamily}" />
                        <Setter Property="FontSize" Value="16" />
                    </Style>
                </ResourceDictionary>
            </muxc:XamlControlsResources.MergedDictionaries>
        </muxc:XamlControlsResources>
    </Application.Resources>
</Application>
