<Page
    x:Class="Screenbox.Pages.FolderViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Screenbox.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <GridView
            ContainerContentChanging="GridView_ContainerContentChanging"
            IsItemClickEnabled="True"
            ItemClick="{x:Bind ViewModel.VideosItemClick}"
            ItemsSource="{x:Bind ViewModel.Items}"
            SelectionMode="None">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:StorageItemViewModel">
                    <Grid
                        Width="220"
                        Height="180"
                        Padding="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="54" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                            BorderThickness="2"
                            CornerRadius="4">
                            <FontIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="32"
                                Glyph="{x:Bind Glyph}" />
                            <Image
                                x:Phase="1"
                                Source="{x:Bind Media.Thumbnail, Mode=OneWay, FallbackValue={x:Null}}"
                                Stretch="UniformToFill" />
                        </Grid>

                        <StackPanel
                            Grid.Row="1"
                            Margin="4,0"
                            Orientation="Vertical">
                            <TextBlock
                                FontWeight="SemiBold"
                                MaxLines="2"
                                Text="{x:Bind Name}"
                                TextWrapping="Wrap" />

                            <TextBlock
                                x:Phase="1"
                                Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind Media.Duration, Converter={StaticResource HumanizedDurationConverter}, FallbackValue={x:Null}}"
                                Visibility="{x:Bind Media.Duration, Converter={StaticResource CommonVisibilityConverter}, FallbackValue=Collapsed}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
