<Page
    x:Class="Screenbox.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls1="using:Screenbox.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:Screenbox.Strings"
    xmlns:triggers="using:Microsoft.Toolkit.Uwp.UI.Triggers"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:viewModels="using:Screenbox.ViewModels"
    Loaded="{x:Bind ViewModel.OnLoaded}"
    mc:Ignorable="d">
    <Page.Resources>
        <x:Double x:Key="StorageItemGridViewItemWidth">168</x:Double>
        <x:Double x:Key="StorageItemGridViewItemHeight">220</x:Double>
        <x:Double x:Key="StorageItemGridViewItemThumbnailHeight">160</x:Double>

        <DataTemplate x:Key="StorageItemGridViewTemplate" x:DataType="viewModels:StorageItemViewModel">
            <Grid
                Width="{StaticResource StorageItemGridViewItemWidth}"
                Height="{StaticResource StorageItemGridViewItemHeight}"
                Padding="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0"
                    Height="{StaticResource StorageItemGridViewItemThumbnailHeight}"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <FontIcon
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="52"
                        Glyph="{x:Bind StorageItem, Converter={StaticResource StorageItemGlyphConverter}}" />
                    <Border CornerRadius="4">
                        <Image
                            HorizontalAlignment="Center"
                            x:Phase="1"
                            Source="{x:Bind Media.Thumbnail, Mode=OneWay, FallbackValue={x:Null}}"
                            Stretch="UniformToFill" />
                    </Border>
                </Grid>

                <TextBlock
                    Grid.Row="1"
                    Margin="4,0"
                    FontWeight="SemiBold"
                    MaxLines="2"
                    Text="{x:Bind Media.Name, Mode=OneWay}"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="2"
                    Margin="4,0"
                    x:Phase="2"
                    Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind CaptionText, Mode=OneWay}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid
            x:Name="WelcomePanel"
            Margin="0,0,56,128"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                Margin="0,0,16,0"
                FontSize="86"
                Text="👋" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="{x:Bind strings:Resources.WelcomePanelHeader}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Top"
                Opacity="0.6"
                Text="{x:Bind strings:Resources.WelcomePanelSubtext}"
                TextWrapping="Wrap" />

            <controls:SplitButton
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,8,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xe8da;" />
                    <TextBlock Text="{x:Bind strings:Resources.OpenFiles}" />
                </StackPanel>
            </controls:SplitButton>
        </Grid>

        <Grid x:Name="RecentFilesPanel" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="Recent" />
            <GridView
                x:Name="RecentFilesGridView"
                Grid.Row="1"
                Margin="0,24,0,0"
                Padding="0,0,56,0"
                ui:ListViewExtensions.Command="{x:Bind ViewModel.PlayCommand}"
                ui:ScrollViewerExtensions.VerticalScrollBarMargin="{StaticResource ContentPageScrollBarMargin}"
                IsItemClickEnabled="True"
                ItemTemplate="{StaticResource StorageItemGridViewTemplate}"
                ItemsSource="{x:Bind ViewModel.Recent}">
                <GridView.Footer>
                    <Border Height="{StaticResource ContentPageBottomMargin}" />
                </GridView.Footer>
            </GridView>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="NavigationViewStates">
                <VisualState x:Name="Expanded" />
                <VisualState x:Name="Compact" />
                <VisualState x:Name="Minimal">
                    <VisualState.StateTriggers>
                        <triggers:IsEqualStateTrigger Value="{x:Bind ViewModel.NavigationViewDisplayMode, Mode=OneWay}">
                            <triggers:IsEqualStateTrigger.To>
                                <controls:NavigationViewDisplayMode>Minimal</controls:NavigationViewDisplayMode>
                            </triggers:IsEqualStateTrigger.To>
                        </triggers:IsEqualStateTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="WelcomePanel.Margin" Value="24,0,36,128" />
                        <Setter Target="RecentFilesGridView.Padding" Value="0,0,12,0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup x:Name="ContentStates">
                <VisualState x:Name="Welcome">
                    <VisualState.Setters>
                        <Setter Target="WelcomePanel.Visibility" Value="Visible" />
                        <Setter Target="RecentFilesPanel.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="RecentMedia">
                    <VisualState.Setters>
                        <Setter Target="WelcomePanel.Visibility" Value="Collapsed" />
                        <Setter Target="RecentFilesPanel.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
