<local:ContentPage
    x:Class="Screenbox.Pages.MusicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:strings="using:Screenbox.Strings"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:viewModels="using:Screenbox.ViewModels"
    x:Name="Page"
    Loaded="MusicPage_OnLoaded"
    mc:Ignorable="d">
    <local:ContentPage.Resources>
        <ResourceDictionary>
            <CollectionViewSource
                x:Name="SongsSource"
                IsSourceGrouped="True"
                Source="{x:Bind ViewModel.GroupedSongs, Mode=OneWay}" />
            <SolidColorBrush x:Key="ListViewHeaderItemDividerStroke" Color="Transparent" />
        </ResourceDictionary>
    </local:ContentPage.Resources>

    <local:ContentPage.Header>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                MaxLines="2"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="{x:Bind strings:Resources.Music}" />

            <Button
                Grid.Column="1"
                Margin="0,0,40,0"
                VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xe8f4;" />
                    <TextBlock Text="Add folder" />
                </StackPanel>
            </Button>
        </Grid>
    </local:ContentPage.Header>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="ShufflePlayButton"
            Grid.Row="0"
            Margin="0,16,0,0"
            Command="{x:Bind ViewModel.ShuffleAndPlayCommand}"
            Style="{StaticResource AccentButtonStyle}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xe8b1;" />
                <TextBlock Text="{x:Bind strings:Resources.ShuffleAndPlay}" />
            </StackPanel>
        </Button>

        <muxc:ProgressBar
            x:Name="LoadingIndicator"
            Grid.Row="1"
            Margin="0,16,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            IsIndeterminate="True"
            Visibility="Collapsed" />

        <Grid
            x:Name="NoMusicMessage"
            Grid.Row="1"
            Margin="0,0,0,128"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <FontIcon
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="0,0,16,0"
                FontSize="72"
                Glyph="&#xe8d6;" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="We couldn't find any music" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Top"
                Opacity="0.6"
                Text="Your music library doesn't contain any music content." />
        </Grid>

        <ListView
            x:Name="SongListView"
            Grid.Row="1"
            Margin="0,24,0,0"
            Padding="0,0,36,0"
            ui:ScrollViewerExtensions.VerticalScrollBarMargin="{StaticResource ContentPageScrollBarMargin}"
            ContainerContentChanging="SongListView_OnContainerContentChanging"
            ItemsSource="{x:Bind SongsSource.View, Mode=OneWay}"
            SelectionMode="None">
            <ListView.GroupStyle>
                <GroupStyle HidesIfEmpty="True">
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                Text="{Binding Key}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:MediaViewModel">
                    <UserControl>
                        <Grid
                            Height="46"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            CornerRadius="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="IndicatorColumn" Width="48" />
                                <ColumnDefinition Width="32" />
                                <ColumnDefinition Width="1.6*" />
                                <ColumnDefinition x:Name="ArtistColumn" Width="0" />
                                <ColumnDefinition x:Name="AlbumColumn" Width="0" />
                                <ColumnDefinition x:Name="GenreColumn" Width="0" />
                                <ColumnDefinition Width="Auto" MinWidth="54" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                x:Name="IsPlayingIcon"
                                Grid.Column="0"
                                Margin="16,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="ms-appx:///Assets/Screenbox-Custom-Icons.ttf#Screenbox-Custom-Icons"
                                FontSize="16"
                                Glyph="A"
                                ToolTipService.ToolTip="{x:Bind strings:Resources.IsPlaying}"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="PlayButton"
                                Grid.Column="1"
                                Padding="6"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ElementName=Page, Path=DataContext.PlayCommand}"
                                CommandParameter="{x:Bind}"
                                Visibility="Collapsed">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="16"
                                    Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                    Glyph="&#xE768;" />
                            </Button>

                            <TextBlock
                                x:Name="TitleText"
                                Grid.Column="2"
                                Margin="8,0,8,0"
                                VerticalAlignment="Center"
                                x:Phase="1"
                                MaxLines="1"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind Name, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis" />

                            <HyperlinkButton
                                x:Name="ArtistText"
                                Grid.Column="3"
                                Margin="4,0"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"
                                Visibility="Collapsed">
                                <TextBlock
                                    x:Phase="1"
                                    MaxLines="1"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind Artists[0].Name, Mode=OneWay, FallbackValue={}}"
                                    TextTrimming="CharacterEllipsis" />
                            </HyperlinkButton>

                            <HyperlinkButton
                                x:Name="AlbumText"
                                Grid.Column="4"
                                Margin="4,0"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"
                                Visibility="Collapsed">
                                <TextBlock
                                    x:Phase="1"
                                    MaxLines="1"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind Album.Name, Mode=OneWay, FallbackValue={}}"
                                    TextTrimming="CharacterEllipsis" />
                            </HyperlinkButton>

                            <TextBlock
                                x:Name="GenreText"
                                Grid.Column="5"
                                Margin="4,0"
                                VerticalAlignment="Center"
                                x:Phase="1"
                                MaxLines="1"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind Genre, Mode=OneWay}"
                                Visibility="Collapsed" />

                            <TextBlock
                                x:Name="DurationText"
                                Grid.Column="6"
                                Margin="8,0,16,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                x:Phase="1"
                                MaxLines="1"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind Duration, Mode=OneWay, Converter={StaticResource HumanizedDurationConverter}}" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="PlayingState">
                                    <VisualState x:Name="NotPlaying" />
                                    <VisualState x:Name="IsPlaying">
                                        <VisualState.StateTriggers>
                                            <StateTrigger IsActive="{Binding IsPlaying}" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="TitleText.Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            <Setter Target="DurationText.Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            <Setter Target="ArtistText.Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            <Setter Target="AlbumText.Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            <Setter Target="GenreText.Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                            <Setter Target="IsPlayingIcon.Visibility" Value="Visible" />
                                            <Setter Target="IsPlayingIcon.Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Multiple">
                                        <VisualState.StateTriggers>
                                            <StateTrigger IsActive="{Binding ElementName=MultiSelectToggle, Path=IsChecked}" />
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="IndicatorColumn.Width" Value="0" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="DetailsLevels">
                                    <VisualState x:Name="Level0" />
                                    <VisualState x:Name="Level1">
                                        <VisualState.Setters>
                                            <Setter Target="ArtistColumn.Width" Value="*" />
                                            <Setter Target="ArtistText.Visibility" Value="Visible" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Level2">
                                        <VisualState.Setters>
                                            <Setter Target="ArtistColumn.Width" Value="*" />
                                            <Setter Target="AlbumColumn.Width" Value="*" />
                                            <Setter Target="ArtistText.Visibility" Value="Visible" />
                                            <Setter Target="AlbumText.Visibility" Value="Visible" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Level3">
                                        <VisualState.Setters>
                                            <Setter Target="ArtistColumn.Width" Value="*" />
                                            <Setter Target="AlbumColumn.Width" Value="*" />
                                            <Setter Target="GenreColumn.Width" Value="*" />
                                            <Setter Target="ArtistText.Visibility" Value="Visible" />
                                            <Setter Target="AlbumText.Visibility" Value="Visible" />
                                            <Setter Target="GenreText.Visibility" Value="Visible" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="PlayButton.Visibility" Value="Visible" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </UserControl>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.Footer>
                <Border Height="{StaticResource ContentPageBottomMargin}" />
            </ListView.Footer>
        </ListView>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ContentStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="Fetching">
                    <VisualState.Setters>
                        <Setter Target="ShufflePlayButton.Visibility" Value="Collapsed" />
                        <Setter Target="LoadingIndicator.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NoContent">
                    <VisualState.Setters>
                        <Setter Target="SongListView.Visibility" Value="Collapsed" />
                        <Setter Target="ShufflePlayButton.Visibility" Value="Collapsed" />
                        <Setter Target="NoMusicMessage.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup x:Name="NavigationViewStates">
                <VisualState x:Name="Expanded" />
                <VisualState x:Name="Compact" />
                <VisualState x:Name="Minimal">
                    <VisualState.Setters>
                        <Setter Target="SongListView.Padding" Value="0,0,12,0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</local:ContentPage>
