<local:ContentPage
    x:Class="Screenbox.Pages.MusicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Screenbox.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:strings="using:Screenbox.Strings"
    xmlns:triggers="using:Microsoft.Toolkit.Uwp.UI.Triggers"
    mc:Ignorable="d">
    <local:ContentPage.Resources>
        <ResourceDictionary>
            <CollectionViewSource
                x:Name="SongsSource"
                IsSourceGrouped="True"
                Source="{x:Bind ViewModel.GroupedSongs, Mode=OneWay}" />
        </ResourceDictionary>
    </local:ContentPage.Resources>

    <local:ContentPage.Header>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                MaxLines="2"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="{x:Bind strings:Resources.Music}" />

            <Button
                x:Name="HeaderAddFolderButton"
                Grid.Column="1"
                Margin="{StaticResource ContentPageRightMargin}"
                VerticalAlignment="Top"
                Command="{x:Bind ViewModel.AddFolderCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xe8f4;" />
                    <TextBlock Text="{x:Bind strings:Resources.AddFolder}" />
                </StackPanel>
            </Button>
        </Grid>
    </local:ContentPage.Header>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="ShufflePlayButton"
            Grid.Row="0"
            Margin="0,16,0,0"
            Command="{x:Bind ViewModel.ShuffleAndPlayCommand}"
            Style="{StaticResource AccentButtonStyle}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xe8b1;" />
                <TextBlock Text="{x:Bind strings:Resources.ShuffleAndPlay}" />
            </StackPanel>
        </Button>

        <muxc:ProgressBar
            x:Name="LoadingIndicator"
            Grid.Row="1"
            Margin="0,16,0,0"
            Padding="{StaticResource ContentPageRightMargin}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            IsIndeterminate="True"
            Visibility="Collapsed" />

        <Grid
            x:Name="NoMusicMessage"
            Grid.Row="1"
            Margin="0,0,0,128"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <FontIcon
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="0,0,16,0"
                FontSize="72"
                Glyph="&#xe8d6;" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Bottom"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="{x:Bind strings:Resources.NoMusicPanelHeader}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Top"
                Opacity="0.6"
                Text="{x:Bind strings:Resources.NoMusicPanelSubtext}" />
        </Grid>

        <controls:MediaListView
            x:Name="SongListView"
            Grid.Row="1"
            Margin="0,24,0,0"
            Padding="{StaticResource ContentPageRightMargin}"
            ItemsSource="{x:Bind SongsSource.View, Mode=OneWay}"
            PlayCommand="{x:Bind ViewModel.PlayCommand}"
            ScrollBarMargin="{StaticResource ContentPageScrollBarMargin}"
            SelectionMode="None">
            <controls:MediaListView.Footer>
                <Border Height="{StaticResource ContentPageBottomPadding}" />
            </controls:MediaListView.Footer>
        </controls:MediaListView>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ContentStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="Fetching">
                    <VisualState.Setters>
                        <Setter Target="LoadingIndicator.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NoContent">
                    <VisualState.Setters>
                        <Setter Target="SongListView.Visibility" Value="Collapsed" />
                        <Setter Target="ShufflePlayButton.Visibility" Value="Collapsed" />
                        <Setter Target="NoMusicMessage.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup x:Name="NavigationViewStates">
                <VisualState x:Name="Expanded" />
                <VisualState x:Name="Compact" />
                <VisualState x:Name="Minimal">
                    <VisualState.StateTriggers>
                        <triggers:IsEqualStateTrigger Value="{x:Bind ViewModel.NavigationViewDisplayMode, Mode=OneWay}">
                            <triggers:IsEqualStateTrigger.To>
                                <muxc:NavigationViewDisplayMode>Minimal</muxc:NavigationViewDisplayMode>
                            </triggers:IsEqualStateTrigger.To>
                        </triggers:IsEqualStateTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SongListView.Padding" Value="{StaticResource ContentPageRightMarginMinimal}" />
                        <Setter Target="HeaderAddFolderButton.Margin" Value="{StaticResource ContentPageRightMarginMinimal}" />
                        <Setter Target="LoadingIndicator.Padding" Value="{StaticResource ContentPageRightMarginMinimal}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</local:ContentPage>
