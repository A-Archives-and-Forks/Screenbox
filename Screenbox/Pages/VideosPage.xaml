<Page
    x:Class="Screenbox.Pages.VideosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Screenbox.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            Grid.Row="1"
            Padding="15,10,10,10"
            Spacing="5">

            <TextBlock Margin="0,10,0,0" Text="Video library" />

            <StackPanel
                Margin="0,-32,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="6">
                <Button
                    HorizontalAlignment="Right"
                    Click="{x:Bind ViewModel.PickFileButtonClick}"
                    Content="Pick file" />

                <Button HorizontalAlignment="Right" Content="Open from URL">
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel Width="300" Spacing="5">
                                <TextBox
                                    x:Name="UrlBox"
                                    Margin="0,5,0,0"
                                    Header="URL to open" />

                                <Button Click="{x:Bind ViewModel.OpenButtonClick}" Content="Open" />
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

            <GridView
                x:Name="Videos"
                IsItemClickEnabled="True"
                ItemClick="{x:Bind ViewModel.VideosItemClick}"
                ItemsSource="{x:Bind ViewModel.Videos}"
                Loaded="{x:Bind ViewModel.OnLoaded}"
                SelectionMode="None">

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:MediaViewModel">
                        <Grid
                            Width="200"
                            Height="180"
                            Padding="5"
                            Background="{StaticResource LayerFillColorDefaultBrush}"
                            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="0"
                                Margin="3"
                                CornerRadius="3">
                                <Image Source="{x:Bind Thumbnail}" />
                            </Border>

                            <TextBlock
                                Grid.Row="1"
                                Margin="0,5,0,0"
                                Text="{x:Bind Title}" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,3,0,0"
                                Text="{x:Bind Location}" />
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>
    </Grid>
</Page>
