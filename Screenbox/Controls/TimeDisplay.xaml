<UserControl
    x:Class="Screenbox.Controls.TimeDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Tapped="TimeDisplay_OnTapped"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="TimeText" Margin="0,0,6,0">
            <Run Text="{x:Bind Time, Mode=OneWay, Converter={StaticResource HumanizedDurationConverter}}" />
            <Run Text=" /" />
        </TextBlock>
        <TextBlock
            x:Name="RemainingText"
            Margin="0,0,6,0"
            Visibility="Collapsed">
            <Run Text="{x:Bind GetRemainingTime(Time), Mode=OneWay}" />
            <Run Text=" /" />
        </TextBlock>
        <TextBlock Text="{x:Bind Length, Mode=OneWay, Converter={StaticResource HumanizedDurationConverter}}" />
    </StackPanel>
</UserControl>
