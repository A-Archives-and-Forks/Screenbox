<UserControl
    x:Class="Screenbox.Controls.VolumeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <Flyout x:Key="VolumeFlyout">
                <StackPanel Orientation="Horizontal">
                    <ToggleButton
                        Margin="0,0,8,0"
                        Background="Transparent"
                        BorderThickness="0"
                        IsChecked="{x:Bind ViewModel.IsMute, Mode=TwoWay}"
                        ToolTipService.ToolTip="{x:Bind GetMuteUnmuteToolTip(ViewModel.IsMute), Mode=OneWay}">
                        <SymbolIcon Symbol="{x:Bind GetMuteToggleSymbol(ViewModel.IsMute), Mode=OneWay}" />
                    </ToggleButton>
                    <Slider
                        x:Uid="VolumeSlider"
                        Width="150"
                        Value="{x:Bind ViewModel.Volume, Mode=TwoWay}" />
                </StackPanel>
            </Flyout>
        </ResourceDictionary>
    </UserControl.Resources>

    <controls:ToggleSplitButton
        x:Name="MuteButton"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{x:Bind Background, Mode=OneWay}"
        BorderThickness="{x:Bind BorderThickness, Mode=OneWay}"
        Flyout="{StaticResource VolumeFlyout}"
        IsChecked="{x:Bind ViewModel.IsMute, Mode=TwoWay}"
        ToolTipService.ToolTip="{x:Bind GetMuteUnmuteToolTip(ViewModel.IsMute), Mode=OneWay}">
        <controls:SplitButton.KeyboardAccelerators>
            <KeyboardAccelerator Key="M" />
        </controls:SplitButton.KeyboardAccelerators>
        <SymbolIcon Symbol="{x:Bind GetMuteToggleSymbol(ViewModel.IsMute), Mode=OneWay}" />
    </controls:ToggleSplitButton>
</UserControl>
